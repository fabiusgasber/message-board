<!DOCTYPE html>
<html lang="en-US">
    <%- include("header") %>
    <body>
        <h1><%= title %></h1>
        <a href="/new">Add message</a>
            <ul>
            <% messages.forEach((message) => { %>
                    <li>
                        <p><%= message.username %>: <%= message.text %></p>
                        <p><%= message.added.toLocaleString() %></p>
                        <a href="/message/<%= message.id %>">More info</a>
                    </li>
           <% }) %>
            </ul>
    </body>
</html>